.article-count-wrapper
  position relative
  min-height 400px

.options
  display flex
  flex-direction row
  align-items center

.option-container
  margin-right 20px
  position relative
  .veil
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background alpha($gray-ll, 80%)

.select2-selection
.select2-selection--single
  &:focus
    outline 0

.time-spans
  > span
    margin-right 5px

.article-count-chart
  position relative
  min-height 400px
  background white
  margin 20px 0
  border-radius 3px
  .instructions
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    color $gray-l
    text-align center
    font-size 1.5em

.select2-container--default .select2-results__option--highlighted[aria-selected]
  background $primary
  color $gray-d
  &:focus
    outline 0
