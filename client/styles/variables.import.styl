$gray-d = $d-gray = rgba(60, 64, 80, 1)
$gray-m = $m-gray = rgba(115, 120, 136, 1)
$gray-md = darken($gray-m, 20%)
$gray-l = $l-gray = rgba(194, 195, 196, 1)
$gray-ll = $ll-gray = #f9f9f9

$primary = rgba(255, 170, 131, 1)
$primary-l = rgba(255, 203, 180, 1)
$secondary = $gray-d
$secondary-l = lighten($secondary, 50%)
$primary-trans = alpha($primary, 10%)
$secondary-trans = alpha($secondary, 10%)

$border-gray = lighten($gray-l, 60%)
$border-primary = lighten($primary, 50%)
$border-secondary = lighten($secondary, 50%)

$warning = #E7604A
$delete = $warning

$header-font = 'Oswald', sans-serif
$body-font = 'Muli', sans-serif
$iconFont = 'FontAwesome'

icon()
  font-family $iconFont
  font-smoothing antialiased
