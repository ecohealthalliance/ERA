template(name='dash')
  .container
    .row.dash-row
      +infoPanel(
        chart='flight-chart'
        big=flightCounts
        small=flightCountInfo
        subInfo='view more FLIRT information'
        active=true
        icon='fa-plane'
      )
      +infoPanel(
        chart='active-users-chart'
        big=flirtActiveUsers
        small='active users on FLIRT'
        subInfo='view FLIRT analytics'
        icon='fa-line-chart'
      )
      +infoPanel(
        chart='downtime-chart'
        big=flirtDowntime
        small=flirtDowntimeInfo
        subInfo='view FLIRT analytics'
        icon='fa-hand-o-down'
      )
    .row.dash-row-main
      .col-lg-12
        .panel.panel-6
          +flightInfo
          +userInfo(
            users30=users30
            source=source
          )
          +downtime
