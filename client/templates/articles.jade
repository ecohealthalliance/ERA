template(name='articles')
  .container-fluid
    .row.dash-row-main
      .col-sm-10.col-sm-offset-1
        h2 Article Density
        if diseases
          select#diseases
            option(disabled='disabled' selected='selected') Select
            each diseases
              option(value=disease)= disease
        else
          +loading
        if selectedDisease
          .article-count-chart
            if articlesReady
              .time-spans view counts by:
                button(data-tab="Day" class="{{#if selectedTab 'Day'}} selected {{/if}}") Day
                button(data-tab="Week" class="{{#if selectedTab 'Week'}} selected {{/if}}") Week
                button(data-tab="Month" class="{{#if selectedTab 'Month'}} selected {{/if}}") Month
              .disease-info
                #disease-chart
            else
              +loading
